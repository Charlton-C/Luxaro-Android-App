<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Luxaro" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ateneo_blue</item>
        <item name="colorPrimaryVariant">@color/medium_persian_blue_1</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/medium_persian_blue_2</item>
        <item name="colorSecondaryVariant">@color/ocean_boat_blue_2</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="android:windowSplashScreenBackground" tools:targetApi="31">@color/ateneo_blue</item>
        <item name="android:windowBackground">@color/ateneo_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="actionBarTheme">@style/ActionBarTheme</item>
    </style>

    <style name="ActionBarTheme">
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/medium_persian_blue_1</item>
        <item name="boxStrokeColor">@color/white_200</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="cursorColor">@color/white</item>
        <item name="cursorErrorColor">@color/white</item>
        <item name="passwordToggleTint">@color/white</item>
        <item name="hintTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="boxCornerRadiusTopStart">6dp</item>
        <item name="boxCornerRadiusTopEnd">6dp</item>
        <item name="boxCornerRadiusBottomEnd">6dp</item>
        <item name="boxCornerRadiusBottomStart">6dp</item>
    </style>

    <style name="TextInputEditTextStyle">
        <item name="backgroundTint">@color/medium_persian_blue_1</item>
        <item name="boxStrokeColor">@color/white</item>
        <item name="boxStrokeWidth">0dp</item>
    </style>

    <style name="MainButtonStyle">
        <item name="backgroundTint">@color/blue_cola</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="android:indeterminateTint">@color/rich_electric_blue</item>
    </style>

    <style name="BottomNavigationViewStyle">
        <item name="android:background">@color/ocean_boat_blue_1</item>
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
    </style>

    <style name="NavigationViewStyle">
        <item name="android:background">@color/medium_persian_blue_2</item>
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
    </style>

    <style name="ChangeThemeAlertDialogStyle" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="android:background">@color/medium_persian_blue_2</item>
    </style>

    <style name="ChangeThemeAlertDialogValuesStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:checkMarkTint">@color/white</item>
    </style>
</resources>